# CCJK 2.0 Development Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Core Application Settings
# =============================================================================

# Application Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Application Secrets
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://ccjk_user:ccjk_password@localhost:5432/ccjk_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ccjk_dev
POSTGRES_USER=ccjk_user
POSTGRES_PASSWORD=ccjk_password

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis Cache & Session Store
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Session Configuration
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_QUEUE_DB=3

# =============================================================================
# Elasticsearch Configuration
# =============================================================================

# Elasticsearch for Search & Analytics
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PREFIX=ccjk_dev

# =============================================================================
# AI Provider API Keys
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# =============================================================================
# Cloud Services Configuration
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ccjk-dev-storage

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# =============================================================================
# CCJK 2.0 Specific Configuration
# =============================================================================

# Brain System Configuration
BRAIN_CONTEXT_COMPRESSION_ENABLED=true
BRAIN_TOKEN_OPTIMIZATION_LEVEL=high
BRAIN_MEMORY_LIMIT=1000000
BRAIN_COMPRESSION_RATIO_TARGET=0.83

# Cloud Sync Configuration
CLOUD_SYNC_ENABLED=true
CLOUD_SYNC_INTERVAL=300000
CLOUD_SYNC_ENDPOINT=https://api.ccjk.dev/sync
CLOUD_SYNC_API_KEY=your-cloud-sync-api-key

# Hot-Reload Skills Configuration
SKILLS_HOT_RELOAD_ENABLED=true
SKILLS_WATCH_DIRECTORIES=./src/skills,./templates/skills
SKILLS_RELOAD_DEBOUNCE=1000

# Multi-Agent Orchestration
AGENTS_MAX_CONCURRENT=5
AGENTS_TIMEOUT=30000
AGENTS_RETRY_ATTEMPTS=3
AGENTS_COORDINATION_MODE=collaborative

# MCP Cloud Configuration
MCP_CLOUD_ENABLED=true
MCP_MARKETPLACE_URL=https://mcp.ccjk.dev
MCP_REGISTRY_SYNC_INTERVAL=3600000
MCP_AUTO_UPDATE_ENABLED=true

# Code Tool Abstraction Layer
CODE_TOOLS_ABSTRACTION_ENABLED=true
CODE_TOOLS_SUPPORTED=claude-code,codex,aider,continue,cline,cursor
CODE_TOOLS_DEFAULT=claude-code
CODE_TOOLS_TOKEN_SAVINGS_TARGET=0.83

# =============================================================================
# Development & Debugging
# =============================================================================

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/ccjk-dev.log
LOG_ROTATION_ENABLED=true
LOG_MAX_FILES=7

# Debug Settings
DEBUG=ccjk:*
DEBUG_COLORS=true
DEBUG_HIDE_DATE=false

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_ENABLED=true
METRICS_ENDPOINT=http://localhost:9090/metrics

# Development Tools
DEV_TOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true
AUTO_RESTART_ENABLED=true
WATCH_EXTENSIONS=.ts,.js,.json,.md

# =============================================================================
# Testing Configuration
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://ccjk_user:ccjk_password@localhost:5432/ccjk_test
TEST_REDIS_URL=redis://localhost:6379/15

# Test Settings
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80
TEST_PARALLEL_WORKERS=4

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# Internationalization
# =============================================================================

# i18n Configuration
I18N_DEFAULT_LOCALE=en
I18N_SUPPORTED_LOCALES=en,zh-CN,ja,ko
I18N_FALLBACK_LOCALE=en
I18N_AUTO_DETECT=true

# =============================================================================
# Feature Flags
# =============================================================================

# Experimental Features
FEATURE_BRAIN_SYSTEM_V2=true
FEATURE_CLOUD_SYNC_V2=true
FEATURE_AGENTS_NETWORK=true
FEATURE_DYNAMIC_WORKFLOWS=true
FEATURE_HOOK_COGNITION=true
FEATURE_TRACEABILITY_FRAMEWORK=true

# Beta Features
BETA_ACTIONBOOK_PIPELINE=false
BETA_ADVANCED_COMPRESSION=false
BETA_QUANTUM_OPTIMIZATION=false