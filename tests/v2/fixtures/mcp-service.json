{
  "id": "test-mcp-service-001",
  "name": "Test File System MCP Service",
  "description": "A test MCP service for file system operations",
  "version": "1.0.0",
  "author": "CCJK Test Suite",
  "repository": "https://github.com/ccjk/test-mcp-filesystem",
  "license": "MIT",
  "category": "filesystem",
  "tags": ["test", "filesystem", "mcp"],
  "command": "node",
  "args": [
    "/path/to/test-mcp-filesystem/index.js"
  ],
  "env": {
    "NODE_ENV": "test",
    "MCP_LOG_LEVEL": "silent",
    "TEST_MODE": "true"
  },
  "capabilities": [
    "read",
    "write",
    "list",
    "search"
  ],
  "tools": [
    {
      "name": "read_file",
      "description": "Read contents of a file",
      "inputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to read"
          }
        },
        "required": ["path"]
      }
    },
    {
      "name": "write_file",
      "description": "Write contents to a file",
      "inputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to write"
          },
          "content": {
            "type": "string",
            "description": "Content to write to the file"
          }
        },
        "required": ["path", "content"]
      }
    },
    {
      "name": "list_directory",
      "description": "List contents of a directory",
      "inputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the directory to list"
          },
          "recursive": {
            "type": "boolean",
            "description": "Whether to list recursively",
            "default": false
          }
        },
        "required": ["path"]
      }
    },
    {
      "name": "search_files",
      "description": "Search for files matching a pattern",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pattern": {
            "type": "string",
            "description": "Search pattern (glob or regex)"
          },
          "directory": {
            "type": "string",
            "description": "Directory to search in",
            "default": "."
          },
          "type": {
            "type": "string",
            "enum": ["glob", "regex"],
            "description": "Type of pattern",
            "default": "glob"
          }
        },
        "required": ["pattern"]
      }
    }
  ],
  "resources": [
    {
      "uri": "file://test-data/",
      "name": "Test Data Directory",
      "description": "Directory containing test data files",
      "mimeType": "application/octet-stream"
    }
  ],
  "prompts": [
    {
      "name": "analyze_file_structure",
      "description": "Analyze the structure of a file or directory",
      "arguments": [
        {
          "name": "path",
          "description": "Path to analyze",
          "required": true
        }
      ]
    }
  ],
  "configuration": {
    "maxFileSize": "10MB",
    "allowedExtensions": [".txt", ".json", ".js", ".ts", ".md"],
    "restrictedPaths": ["/etc", "/sys", "/proc"],
    "timeout": 30000
  },
  "health": {
    "endpoint": "/health",
    "interval": 30000,
    "timeout": 5000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "destination": "/tmp/test-mcp-filesystem.log"
  }
}