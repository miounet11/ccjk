{
  "name": "@ccjk/daemon",
  "version": "1.0.0",
  "description": "Background daemon for CCJK remote control",
  "author": "CCJK Team",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ccjk-daemon": "./bin/daemon.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "package.json"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "shx rm -rf dist && tsc --noEmit && pkgroll",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx src/index.ts"
  },
  "dependencies": {
    "@ccjk/wire": "workspace:*",
    "fastify": "^5.6.2",
    "socket.io-client": "^4.8.1",
    "chalk": "^5.6.2",
    "ps-list": "^8.1.1",
    "cross-spawn": "^7.0.6"
  },
  "devDependencies": {
    "@types/node": ">=20",
    "@types/cross-spawn": "^6.0.6",
    "pkgroll": "^2.14.2",
    "shx": "^0.3.3",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vitest": "^3.2.4"
  }
}
