{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Default Claude Code settings.json template for CCJK v8.1.2 - Supports Claude Code CLI 2.0-2.1",

  "model": "default",

  "env": {
    "ANTHROPIC_MODEL": "",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": ""
  },

  "language": "",

  "showTurnDuration": false,

  "respectGitignore": true,

  "auto": {
    "mcp": 5
  },

  "agent": "",

  "thinking": {
    "enabled": false,
    "budgetTokens": 10240
  },

  "fileSuggestion": {
    "type": "command",
    "command": "git"
  },

  "allowUnsandboxedCommands": false,

  "disallowedTools": [],

  "attribution": {},

  "index": {
    "maxFiles": 10000,
    "maxFileSize": 2097152
  },

  "allowBrowser": false,

  "permissions": {
    "allow": [
      "AllowEdit",
      "AllowWrite",
      "AllowRead",
      "AllowExec",
      "AllowCreateProcess",
      "AllowKillProcess",
      "AllowNetworkAccess",
      "AllowFileSystemAccess",
      "AllowShellAccess",
      "AllowHttpAccess"
    ]
  },

  "chat": {
    "alwaysApprove": []
  },

  "experimental": {}
}
