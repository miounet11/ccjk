{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "description": "Default Claude Code settings.json template for CCJK v8.1.2 - Supports Claude Code CLI 2.0-2.1",

  "model": "default",

  "env": {
    "ANTHROPIC_MODEL": "",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": ""
  },

  "language": "",

  "showTurnDuration": false,

  "respectGitignore": true,

  "auto": {
    "mcp": 5
  },

  "agent": "",

  "thinking": {
    "enabled": false,
    "budgetTokens": 10240
  },

  "fileSuggestion": {
    "type": "command",
    "command": "git"
  },

  "allowUnsandboxedCommands": false,

  "disallowedTools": [],

  "attribution": {},

  "index": {
    "maxFiles": 10000,
    "maxFileSize": 2097152
  },

  "allowBrowser": false,

  "statusLine": {},

  "plansDirectory": ".claude/plans",
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [],
    "Notification": [],
    "Stop": []
  },
  "permissions": {
    "allow": [
      "Bash(pnpm *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(NODE_ENV=* pnpm *)",
      "Bash(yarn *)",
      "Bash(bun *)",
      "Bash(git *)",
      "Bash(make *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(which *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(echo *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(chmod *)"
    ]
  },

  "chat": {
    "alwaysApprove": []
  },

  "experimental": {}
}
